<div class="page-header">
  <h1>NEW ARTICLE</h1>
</div>

<div class="container">
  <%= form_for [:user, @article] do |f| %>
    <div class="row">
      <div class="col-md-3">
        <%= f.label :title %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7">
        <%= f.text_field :title, :class => "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= f.label :content %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7 bing5tui3-blog-editarea">  
        <%= f.text_area :content, :class => "form-control" %>
      </div>
    </div>
    <div class="row bing5tui3-article-submit">
      <div class="col-md-2">
        <%= f.submit "submit", :class => "btn btn-lg btn-primary" %>
      </div>
    </div>
  <% end %>
</div>