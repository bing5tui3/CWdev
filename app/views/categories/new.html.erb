<%= provide(:title, 'Category') %>
<div class="page-header">
  <h1>NEW CATEGORY</h1>
</div>

<div class="container">

  <%= form_for @category, :url => categories_path, :method => "POST" do |f| %>
    <div class="row">
      <div class="col-md-3 col-md-offset-2 bing5tui3-form-label">
        <%= f.label :name, 'Name:' %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :name, { :class => "form-control", :placeholder => "Category Name", :required => "true", :autofocus => "true"} %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-2">
        <hr />
      </div>
    </div>

    <div class="row">
      <div class="col-md-5">
      </div>
      <div class="col-md-2">  
        <%= f.submit 'Create', :class => 'btn btn-lg btn-primary btn-block' %>
      </div>
      <div class="col-md-5">
      </div>
    </div>  
  <% end %>

</div>