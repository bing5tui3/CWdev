<% provide(:title, @user.name) %>
<div class="page-header">
  <h1>PROFILE</h1>
</div>

<div class="container bing5tui3-form-container">

  <div class="row" id="bing5tui3-row-modified">
    <div class="col-md-4 text-center" id="bing5tui3-vertical-center">
      <div class="bing5tui3-portrait-container">
        <%= image_tag @user.portrait.url(:medium) %>
      </div>
    </div>

    <div class="col-md-7">
      <div class="row">
        <div class="col-md-3">
          <span class="label label-default">Basic Infomation</span>
        </div>
      </div>
      <div class="row">
        <div class="col-md-10 col-sm-10 col-xs-10">
          <hr />
        </div>
      </div>

      <div class="row">
        <div class="col-md-5 col-sm-5 col-xs-5 bing5tui3-attr-label">
          <label>Name:</label>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-5">
          <p><%= @user.name %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-10 col-sm-10 col-xs-10">
          <hr />
        </div>
      </div>

      <div class="row">
        <div class="col-md-5 col-sm-5 col-xs-5 bing5tui3-attr-label">
          <label>Email:</label>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-5">
          <p><%= @user.email %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-10 col-sm-10 col-xs-10">
          <hr />
        </div>
      </div>

      <div class="row">
        <div class="col-md-5 col-sm-5 col-xs-5 bing5tui3-attr-label">
          <label>ICode:</label>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-5">
          <p><%= @user.icode %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-10 col-sm-10 col-xs-10">
          <hr />
        </div>
      </div>

    </div>
  </div>
  <hr />

  <div class="row">
    <div class="col-md-2 col-md-offset-4 col-sm-3 col-sm-offset-4 col-xs-3 col-xs-offset-4">
      <%= link_to "Change", edit_user_path(@user), {:class=>'btn btn-lg btn-block btn-primary'} %>
    </div>
  </div>

</div>

 <script>
   EquateLineHeight('bing5tui3-row-modified', 'bing5tui3-vertical-center');
 </script>


       

